# {{ ansible_managed }}
# docker-compose-infra.yml — Services d'infrastructure (Phase A)
# PostgreSQL, Redis, Qdrant, Caddy, Reseaux
# NOTE: No depends_on between data services — each starts independently
# Health is verified individually by Ansible tasks

services:
  # === DATA LAYER (independent services) ===
  postgresql:
    image: {{ postgresql_image }}
    container_name: {{ project_name }}_postgresql
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
      - DAC_OVERRIDE
      - FOWNER
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: "{{ postgresql_password }}"
      POSTGRES_INITDB_ARGS: "--encoding=UTF8 --locale-provider=icu --icu-locale={{ locale | regex_replace('_', '-') | regex_replace('\..*', '') }} --locale=C"
    volumes:
      - /opt/{{ project_name }}/data/postgresql:/var/lib/postgresql
      - /opt/{{ project_name }}/configs/postgresql/postgresql.conf:/etc/postgresql/postgresql.conf:ro
      - /opt/{{ project_name }}/configs/postgresql/pg_hba.conf:/etc/postgresql/pg_hba.conf:ro
      - /opt/{{ project_name }}/configs/postgresql/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    command: postgres -c config_file=/etc/postgresql/postgresql.conf -c hba_file=/etc/postgresql/pg_hba.conf
    networks:
      - backend
    deploy:
      resources:
        limits:
          memory: {{ postgresql_memory_limit }}
          cpus: "{{ postgresql_cpu_limit }}"
        reservations:
          memory: {{ postgresql_memory_reservation }}
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 120s

  redis:
    image: {{ redis_image }}
    container_name: {{ project_name }}_redis
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    volumes:
      - /opt/{{ project_name }}/data/redis:/data
      - /opt/{{ project_name }}/configs/redis/redis.conf:/usr/local/etc/redis/redis.conf:ro
    command: redis-server /usr/local/etc/redis/redis.conf
    networks:
      - backend
    deploy:
      resources:
        limits:
          memory: {{ redis_memory_limit }}
          cpus: "{{ redis_cpu_limit }}"
        reservations:
          memory: {{ redis_memory_reservation }}
    healthcheck:
      test: ["CMD-SHELL", "redis-cli -a '{{ redis_password }}' ping | grep -q PONG"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  qdrant:
    image: {{ qdrant_image }}
    container_name: {{ project_name }}_qdrant
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
      - DAC_OVERRIDE
      - FOWNER
    environment:
      QDRANT__SERVICE__API_KEY: "{{ qdrant_api_key }}"
    volumes:
      - /opt/{{ project_name }}/data/qdrant/storage:/qdrant/storage
      - /opt/{{ project_name }}/data/qdrant/snapshots:/qdrant/snapshots
      - /opt/{{ project_name }}/configs/qdrant/config.yaml:/qdrant/config/production.yaml:ro
    networks:
      - backend
    deploy:
      resources:
        limits:
          memory: {{ qdrant_memory_limit }}
          cpus: "{{ qdrant_cpu_limit }}"
        reservations:
          memory: {{ qdrant_memory_reservation }}
    healthcheck:
      test: ["CMD-SHELL", "bash -c ':> /dev/tcp/localhost/6333' || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  # === REVERSE PROXY (no depends_on — starts independently) ===
  caddy:
{% if caddy_vpn_only_mode | default(false) | bool %}
    # VPN-only mode: image custom buildée localement avec plugin OVH DNS-01
    image: caddy-ovh:{{ caddy_image | regex_replace('^caddy:([^-]+).*$', '\1') }}
{% else %}
    image: {{ caddy_image }}
{% endif %}
    container_name: {{ project_name }}_caddy
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - NET_BIND_SERVICE
      - DAC_OVERRIDE
    ports:
{% if not caddy_vpn_only_mode | default(false) | bool %}
      # Mode standard : port 80 pour ACME HTTP-01 et redirect HTTPS
      - "80:80"
{% endif %}
      - "443:443"
      - "443:443/udp"
{% if caddy_vpn_only_mode | default(false) | bool %}
    environment:
      # OVH API credentials pour ACME DNS-01 (mode VPN-only — port 80 fermé)
      # REX: DNS-01 ne nécessite pas le port 80 ouvert publiquement.
      # Créer les credentials sur https://eu.api.ovh.com/createToken/
      OVH_ENDPOINT: "{{ ovh_endpoint }}"
      OVH_APPLICATION_KEY: "{{ ovh_application_key }}"
      OVH_APPLICATION_SECRET: "{{ ovh_application_secret }}"
      OVH_CONSUMER_KEY: "{{ ovh_consumer_key }}"
{% endif %}
    volumes:
      - /opt/{{ project_name }}/configs/caddy/Caddyfile:/etc/caddy/Caddyfile:ro
      - /opt/{{ project_name }}/configs/caddy/admin-landing.html:/srv/admin-landing.html:ro
      - /opt/{{ project_name }}/configs/caddy/restricted-zone.html:/srv/restricted-zone.html:ro
      - /opt/{{ project_name }}/data/caddy/data:/data
      - /opt/{{ project_name }}/data/caddy/config:/config
      - /opt/{{ project_name }}/logs/caddy:/var/log/caddy
    networks:
      - frontend
      - backend
    deploy:
      resources:
        limits:
          memory: {{ caddy_memory_limit }}
          cpus: "{{ caddy_cpu_limit }}"
        reservations:
          memory: {{ caddy_memory_reservation }}
    healthcheck:
      test: ["CMD", "caddy", "version"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 10s

{% if caddy_vpn_only_mode | default(false) | bool %}
  # === CLOUDFLARE TUNNEL (mode VPN-only uniquement) ===
  # Expose les webhooks Meta (Instagram) vers Internet via connexion sortante.
  # REX: cloudflared crée une connexion sortante vers Cloudflare — aucun port entrant.
  # Le token est généré dans Cloudflare Dashboard > Zero Trust > Tunnels.
  # Les paths exposés sont configurés dans Caddyfile.j2 (caddy_public_webhook_paths).
  # PRÉREQUIS avant activation : Cloudflare Tunnel configuré et token généré.
  cloudflared:
    image: {{ cloudflared_image }}
    container_name: {{ project_name }}_cloudflared
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    command: tunnel --no-autoupdate run --token {{ cloudflare_tunnel_token }}
    networks:
      - frontend
    deploy:
      resources:
        limits:
          memory: 64m
          cpus: "0.1"
        reservations:
          memory: 32m
    healthcheck:
      test: ["CMD-SHELL", "cloudflared tunnel info 2>/dev/null | grep -q 'TunnelID' || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
{% endif %}

networks:
  frontend:
    name: {{ project_name }}_frontend
    driver: bridge
    ipam:
      config:
        - subnet: {{ docker_network_frontend_subnet }}

  backend:
    name: {{ project_name }}_backend
    driver: bridge
    internal: true
    ipam:
      config:
        - subnet: {{ docker_network_backend_subnet }}

  egress:
    name: {{ project_name }}_egress
    driver: bridge
    ipam:
      config:
        - subnet: {{ docker_network_egress_subnet }}

  monitoring:
    name: {{ project_name }}_monitoring
    driver: bridge
    internal: true
    ipam:
      config:
        - subnet: {{ docker_network_monitoring_subnet }}

  sandbox:
    name: {{ project_name }}_sandbox
    driver: bridge
    internal: true
    ipam:
      config:
        - subnet: {{ docker_network_sandbox_subnet }}
