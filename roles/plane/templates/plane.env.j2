# Plane Environment Configuration
# Template generated by Ansible â€” DO NOT edit manually

# Django Core
SECRET_KEY={{ vault_plane_secret_key }}

# Database
DATABASE_URL=postgresql://{{ plane_db_user }}:{{ postgresql_password }}@postgresql:5432/{{ plane_db_name }}

# Redis
REDIS_URL=redis://:{{ vault_redis_password }}@redis:6379/0
CELERY_BROKER_URL=redis://:{{ vault_redis_password }}@redis:6379/1

# Web URLs
WEB_URL=https://work.{{ domain_name }}
CORS_ALLOWED_ORIGINS=https://work.{{ domain_name }}

# API Configuration (for frontend)
NEXT_PUBLIC_API_BASE_URL=https://work.{{ domain_name }}

# Authentication
ENABLE_SIGNUP=1
ENABLE_EMAIL_PASSWORD=1
NEXT_PUBLIC_ENABLE_OAUTH=0
NEXT_PUBLIC_ENABLE_SIGNUP=1

# File Storage (MinIO)
USE_MINIO=1
DEFAULT_FILE_STORAGE=plane.settings.storage.S3Storage
MINIO_ENDPOINT_URL=http://plane-minio:{{ plane_minio_api_port }}
AWS_ACCESS_KEY_ID={{ plane_minio_access_key }}
AWS_SECRET_ACCESS_KEY={{ plane_minio_secret_key }}
AWS_STORAGE_BUCKET_NAME={{ plane_minio_bucket }}
AWS_S3_BUCKET_NAME={{ plane_minio_bucket }}
AWS_S3_ENDPOINT_URL=http://plane-minio:{{ plane_minio_api_port }}
AWS_S3_CUSTOM_DOMAIN=work.{{ domain_name }}/uploads
FILE_SIZE_LIMIT=52428800

# Webhooks
PLANE_WEBHOOK_SECRET={{ vault_plane_webhook_secret }}
