# {{ ansible_managed }}
# LiteLLM environment

# AI Provider Keys
ANTHROPIC_API_KEY={{ anthropic_api_key }}
OPENAI_API_KEY={{ openai_api_key }}
{% if openrouter_api_key | default('') | length > 0 %}
OPENROUTER_API_KEY={{ openrouter_api_key }}
{% endif %}
{% if google_gemini_api_key | default('') | length > 0 %}
GOOGLE_GEMINI_API_KEY={{ google_gemini_api_key }}
{% endif %}
{% if byteplus_api_key | default('') | length > 0 %}
BYTEPLUS_API_KEY={{ byteplus_api_key }}
{% endif %}

# LiteLLM Master Key (proxy auth)
LITELLM_MASTER_KEY={{ litellm_master_key }}

# Database
DATABASE_URL=postgresql://litellm:{{ postgresql_password }}@postgresql:5432/litellm
STORE_MODEL_IN_DB=True

# Redis (used by cache_params with os.environ/ references in config.yaml)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD={{ redis_password }}

# Qdrant (used by semantic cache with os.environ/ references in config.yaml)
QDRANT_API_KEY={{ qdrant_api_key }}

# UI Admin
UI_USERNAME={{ litellm_ui_username }}
UI_PASSWORD={{ litellm_ui_password }}

# Security
LITELLM_SALT_KEY={{ litellm_salt_key }}
