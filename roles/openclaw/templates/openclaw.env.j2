# {{ ansible_managed }}
# OpenClaw environment configuration

# Database
DATABASE_URL=postgresql://openclaw:{{ postgresql_password }}@postgresql:5432/openclaw

# Redis
REDIS_URL=redis://:{{ redis_password }}@redis:6379/0

# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY={{ qdrant_api_key }}

# LiteLLM (local proxy)
LITELLM_BASE_URL=http://litellm:4000
LITELLM_API_KEY={{ litellm_master_key }}

# Defaults
DEFAULT_MODEL=claude-sonnet
EMBEDDING_MODEL=text-embedding-3-small

# Server
HOST=0.0.0.0
PORT=8080
API_KEY={{ openclaw_api_key }}

# Telegram Bot (dedicated OpenClaw)
{% if telegram_openclaw_bot_token | default('') | length > 0 and telegram_openclaw_chat_id | default('') | length > 0 %}
TELEGRAM_BOT_TOKEN={{ telegram_openclaw_bot_token }}
TELEGRAM_CHAT_ID={{ telegram_openclaw_chat_id }}
{% endif %}

# Timezone
TZ={{ timezone }}
