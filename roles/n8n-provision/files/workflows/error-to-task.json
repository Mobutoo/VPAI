        "url": "=http://kaneo-api:1337/api/activity/comment",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            { "name": "Cookie",       "value": "={{ $json.cookie }}" },
            { "name": "Content-Type", "value": "application/json" }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"taskId\": \"{{ $json.source_task_id }}\",\n  \"content\": \"Erreur detectee — tache de correction creee : {{ $json.new_task_id }}\"\n}",
        "options": {},
        "continueOnFail": true
