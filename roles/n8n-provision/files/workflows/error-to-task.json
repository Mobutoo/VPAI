    "Prepare task data": { "main": [[{ "node": "Create correction task", "type": "main", "index": 0 }]] },
    "Create correction task": { "main": [[{ "node": "Extract new task id", "type": "main", "index": 0 }]] },
    "Extract new task id": {
      "main": [[
        { "node": "Store in Memory", "type": "main", "index": 0 },
