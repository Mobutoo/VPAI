# {{ ansible_managed }}
NC_DB=pg://postgresql:5432?u=nocodb&p={{ postgresql_password }}&d=nocodb
NC_PUBLIC_URL=https://{{ nocodb_subdomain }}.{{ domain_name }}
NC_AUTH_JWT_SECRET={{ nocodb_jwt_secret }}
NC_TOOL_DIR=/data
NC_DISABLE_TELE=true

# NC_API_TOKEN : à provisionner manuellement après le premier démarrage.
# Étapes : NocoDB UI → Team & Auth → API Tokens → créer un token
# Puis stocker dans vault_nocodb_api_token et redéployer :
#   make deploy-role ROLE=nocodb ENV=prod  (pour propager dans openclaw.env + n8n.env)
