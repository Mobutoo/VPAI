{
  "__inputs": [
    { "name": "DS_VICTORIAMETRICS", "label": "VictoriaMetrics", "type": "datasource", "pluginId": "prometheus" },
    { "name": "DS_LOKI", "label": "Loki", "type": "datasource", "pluginId": "loki" }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "datasource", "id": "loki", "name": "Loki", "version": "1.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "description": "Creative Studio — ComfyUI + Remotion on RPi5",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "ComfyUI — Image Generation",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "red", "value": null },
            { "color": "green", "value": 1 }
          ]},
          "mappings": [
            { "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }, "type": "value" }
          ]
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 101,
      "options": { "colorMode": "background", "graphMode": "none", "justifyMode": "center", "textMode": "auto" },
      "title": "ComfyUI Status",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "up{job=\"comfyui\"}",
          "legendFormat": "ComfyUI"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "percentunit"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 4, "y": 1 },
      "id": 102,
      "options": { "legend": { "calcs": ["mean", "max"], "displayMode": "list", "placement": "bottom" } },
      "title": "RPi5 CPU Usage (ComfyUI workloads)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\",instance=~\"workstation.*\"}[5m]))",
          "legendFormat": "CPU Total"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "container_cpu_usage_seconds_total{name=~\".*comfyui.*\"}",
          "legendFormat": "ComfyUI CPU"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "id": 103,
      "title": "Memory — ComfyUI vs Remotion",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "container_memory_usage_bytes{name=~\".*comfyui.*\"}",
          "legendFormat": "ComfyUI RAM"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "container_memory_usage_bytes{name=~\".*remotion.*\"}",
          "legendFormat": "Remotion RAM"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 200,
      "title": "Remotion — Video Rendering",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "red", "value": null },
            { "color": "green", "value": 1 }
          ]},
          "mappings": [
            { "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }, "type": "value" }
          ]
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 10 },
      "id": 201,
      "options": { "colorMode": "background", "graphMode": "none", "justifyMode": "center", "textMode": "auto" },
      "title": "Remotion Status",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "up{job=\"remotion\"}",
          "legendFormat": "Remotion"
        }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 20, "x": 4, "y": 10 },
      "id": 202,
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "title": "Creative Pipeline Logs",
      "type": "logs",
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "expr": "{job=~\"comfyui|remotion\"} |= ``",
          "legendFormat": ""
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 300,
      "title": "Asset Production — Statistics",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "palette-classic" }, "unit": "short" }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 19 },
      "id": 301,
      "options": { "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "right" } },
      "title": "Assets Generated (HTTP requests to creative endpoints)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "increase(container_network_receive_bytes_total{name=~\".*comfyui.*\"}[1h])",
          "legendFormat": "ComfyUI network (proxy activity)"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_VICTORIAMETRICS}" },
          "expr": "increase(container_network_receive_bytes_total{name=~\".*remotion.*\"}[1h])",
          "legendFormat": "Remotion network (render activity)"
        }
      ]
    }
  ],
  "refresh": "1m",
  "schemaVersion": 38,
  "tags": ["creative", "comfyui", "remotion", "rpi"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Creative Studio (RPi5)",
  "uid": "creative-studio-rpi",
  "version": 1
}
