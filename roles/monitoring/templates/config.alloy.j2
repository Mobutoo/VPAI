// {{ ansible_managed }}
// Grafana Alloy configuration for {{ project_display_name }}
// HCL format — collects metrics + logs from all Docker containers

// ============================================================
// DOCKER DISCOVERY
// ============================================================

discovery.docker "containers" {
  host = "unix:///var/run/docker.sock"
}

// ============================================================
// METRICS: Node Exporter (host metrics)
// ============================================================

prometheus.exporter.unix "node" {
  procfs_path = "/host/proc"
  sysfs_path  = "/host/sys"
  set_collectors = [
    "cpu",
    "diskstats",
    "filesystem",
    "loadavg",
    "meminfo",
    "netdev",
    "uname",
  ]
}

prometheus.scrape "node" {
  targets    = prometheus.exporter.unix.node.targets
  forward_to = [prometheus.remote_write.victoriametrics.receiver]
  scrape_interval = "30s"
  job_name   = "node"
}

// ============================================================
// METRICS: cAdvisor (container metrics)
// ============================================================

prometheus.scrape "cadvisor" {
  targets = [{
    __address__ = "cadvisor:8080",
  }]
  forward_to      = [prometheus.relabel.cadvisor.receiver]
  scrape_interval = "30s"
  job_name        = "cadvisor"
  metrics_path    = "/metrics"
}

// Relabel cAdvisor metrics: normalise container names (strip leading /)
prometheus.relabel "cadvisor" {
  forward_to = [prometheus.remote_write.victoriametrics.receiver]

  rule {
    source_labels = ["name"]
    regex         = "/(.*)"
    target_label  = "name"
  }

  rule {
    source_labels = ["name"]
    target_label  = "container"
  }
}

// ============================================================
// METRICS: LiteLLM Proxy (request/spend/token metrics)
// ============================================================

prometheus.scrape "litellm" {
  targets = [{
    __address__ = "litellm:4000",
  }]
  forward_to      = [prometheus.remote_write.victoriametrics.receiver]
  scrape_interval = "30s"
  job_name        = "litellm"
  metrics_path    = "/metrics"
}

// ============================================================
// METRICS: Qdrant (vector DB — collections, points, latency)
// ============================================================

prometheus.scrape "qdrant" {
  targets = [{
    __address__ = "qdrant:6333",
  }]
  forward_to      = [prometheus.remote_write.victoriametrics.receiver]
  scrape_interval = "30s"
  job_name        = "qdrant"
  metrics_path    = "/metrics"

  // Qdrant accepts Authorization: Bearer <api-key> (GitHub issue #2845)
  bearer_token = "{{ qdrant_api_key }}"
}

// ============================================================
// METRICS: Remote Write to VictoriaMetrics
// ============================================================

prometheus.remote_write "victoriametrics" {
  endpoint {
    url = "http://victoriametrics:8428/api/v1/write"
  }
}

// ============================================================
// LOGS: Relabel Docker targets for log collection
// ============================================================

discovery.relabel "docker_logs" {
  targets = discovery.docker.containers.targets

  rule {
    source_labels = ["__meta_docker_container_name"]
    regex         = "/(.*)"
    target_label  = "container"
  }
}

// ============================================================
// LOGS: Docker container logs
// ============================================================

loki.source.docker "containers" {
  host       = "unix:///var/run/docker.sock"
  targets    = discovery.relabel.docker_logs.output
  forward_to = [loki.process.docker.receiver]
}

loki.process "docker" {
  stage.docker {}

  // Add static labels
  stage.static_labels {
    values = {
      job     = "docker",
      project = "{{ project_name }}",
    }
  }

  forward_to = [loki.write.loki.receiver]
}

// ============================================================
// LOGS: Write to Loki
// ============================================================

loki.write "loki" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}
