# {{ ansible_managed }}
# Loki configuration for {{ project_display_name }}
# Loki 3.6.5 single-node monolithic mode (-target=all)
# REX: "empty ring" fix requires explicit ingester ring + memberlist disabled

auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9096
  log_level: warn

# Memberlist disabled â€” single-node deployment, no cluster discovery needed
# REX: Loki 3.x initializes memberlist-kv even with inmemory kvstore (bug #19381)
# Explicitly disabling prevents network interface lookup errors
memberlist:
  join_members: []

common:
  instance_addr: 127.0.0.1
  path_prefix: /loki
  storage:
    filesystem:
      chunks_directory: /loki/chunks
      rules_directory: /loki/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

ingester:
  chunk_idle_period: 1h
  max_chunk_age: 2h
  chunk_retain_period: 30s
  lifecycler:
    ring:
      replication_factor: 1
      kvstore:
        store: inmemory
    final_sleep: 0s
  wal:
    dir: /loki/wal

query_range:
  results_cache:
    cache:
      embedded_cache:
        enabled: true
        max_size_mb: 100

schema_config:
  configs:
    - from: "2024-01-01"
      store: tsdb
      object_store: filesystem
      schema: v13
      index:
        prefix: index_
        period: 24h

storage_config:
  filesystem:
    directory: /loki/chunks
  tsdb_shipper:
    active_index_directory: /loki/tsdb-index
    cache_location: /loki/tsdb-cache

limits_config:
  retention_period: {{ loki_retention_period }}
  max_query_length: {{ loki_max_query_length }}
  reject_old_samples: true
  reject_old_samples_max_age: 168h
  ingestion_rate_mb: 10
  ingestion_burst_size_mb: 20

compactor:
  working_directory: /loki/compactor
  compaction_interval: 10m
  retention_enabled: true
  retention_delete_delay: 2h
  delete_request_store: filesystem

analytics:
  reporting_enabled: false
